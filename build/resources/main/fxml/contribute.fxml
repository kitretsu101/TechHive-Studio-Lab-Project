<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="com.techhive.controller.ContributeController"
            fitToWidth="true"
            styleClass="main-scroll-pane"
            stylesheets="@../css/styles.css"
            hbarPolicy="NEVER">

    <VBox styleClass="main-container" spacing="0">
        
        <!-- Navbar -->
        <HBox fx:id="navBar" styleClass="nav-bar" alignment="CENTER">
            <padding><Insets top="15" right="50" bottom="15" left="50"/></padding>
            <Label fx:id="logoLabel" text="TechHive Studio" styleClass="logo"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox fx:id="navLinks" spacing="35" alignment="CENTER"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="startProjectBtn" text="Start a Project" styleClass="btn, btn-primary"/>
        </HBox>

        <!-- Hero -->
        <VBox styleClass="hero-section" alignment="CENTER" spacing="25">
            <padding><Insets top="80" right="50" bottom="80" left="50"/></padding>
            <Label text="Join the Hive." styleClass="hero-title"/>
            <Label text="We are always looking for passionate engineers, designers, and innovators." 
                   styleClass="hero-subtitle" wrapText="true" maxWidth="800" textAlignment="CENTER"/>
            <Button fx:id="viewOpeningsBtn" text="View Open Positions" styleClass="btn, btn-primary"/>
        </VBox>

        <!-- Info Grid -->
        <HBox alignment="CENTER" spacing="50">
            <padding><Insets top="60" bottom="60"/></padding>
            
            <VBox styleClass="service-card" maxWidth="350">
                <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
                <Label text="Culture" styleClass="service-title"/>
                <Label text="We believe in remote-first, autonomous work where your output matters more than your hours." 
                       styleClass="service-description" wrapText="true"/>
            </VBox>
            
            <VBox styleClass="service-card" maxWidth="350">
                <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
                <Label text="Growth" styleClass="service-title"/>
                <Label text="Annual learning budget, mentorship programs, and opportunities to lead high-impact projects." 
                       styleClass="service-description" wrapText="true"/>
            </VBox>
            
            <VBox styleClass="service-card" maxWidth="350">
                <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>
                <Label text="Impact" styleClass="service-title"/>
                <Label text="Work on software used by millions, from healthcare analytics to global e-commerce platforms." 
                       styleClass="service-description" wrapText="true"/>
            </VBox>
        </HBox>

        <!-- Footer -->
        <HBox styleClass="footer" alignment="CENTER">
            <padding><Insets top="30" right="50" bottom="30" left="50"/></padding>
            <Label text="Â© 2024 TechHive Studio. All rights reserved." styleClass="footer-text"/>
        </HBox>

    </VBox>
</ScrollPane>
