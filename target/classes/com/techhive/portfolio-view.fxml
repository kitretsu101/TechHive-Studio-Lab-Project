<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox spacing="20.0" styleClass="content-area" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label styleClass="header-label" text="Portfolio" />
      <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;">
         <content>
            <VBox spacing="20.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <Rectangle arcHeight="10.0" arcWidth="10.0" fill="DARKGRAY" height="200.0" width="600.0" />
                        <Label styleClass="card-title" text="Modern School Website" />
                        <Label styleClass="card-text" text="A complete overhaul of the school's digital presence with a focus on accessibility and modern design." wrapText="true" />
                     </children>
                  </VBox>
                  <VBox spacing="10.0" styleClass="card">
                     <children>
                        <Rectangle arcHeight="10.0" arcWidth="10.0" fill="DARKGRAY" height="200.0" width="600.0" />
                        <Label styleClass="card-title" text="E-Commerce Platform" />
                        <Label styleClass="card-text" text="Scalable online store with integrated payment gateway and inventory management." wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
