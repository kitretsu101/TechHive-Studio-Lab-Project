<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.techhive_studio_website_project_final.controller.AdminDatabaseController"
            prefWidth="1500" prefHeight="900"
            styleClass="admin-page">

    <!-- Top Navigation Bar -->
    <top>
        <HBox styleClass="admin-navbar" alignment="CENTER_LEFT" spacing="20" prefHeight="70">
            <padding>
                <Insets top="10" right="40" bottom="10" left="40"/>
            </padding>
            
            <Label text="âš¡ TechHive Admin" styleClass="admin-brand"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <Button text="ðŸ  Home" onAction="#onHomeClick" styleClass="nav-button"/>
            <Button text="ðŸ”„ Refresh" onAction="#onRefreshClick" styleClass="nav-button"/>
            <Button text="Logout" onAction="#onLogoutClick" styleClass="button-logout"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: -fx-base;">
            <VBox spacing="25" style="-fx-padding: 30; -fx-background-color: -fx-base;">
                
                <!-- Page Header -->
                <VBox spacing="8">
                    <Label text="Admin Database" styleClass="admin-title"/>
                    <Label text="Manage contact inquiries, contributor applications, and project requests" styleClass="admin-subtitle"/>
                </VBox>
                
                <!-- Stats Cards Row -->
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <VBox styleClass="stat-card" alignment="CENTER" spacing="5" prefWidth="200">
                        <Label fx:id="totalContactsLabel" text="0" styleClass="stat-number"/>
                        <Label text="ðŸ“§ Contact Inquiries" styleClass="stat-label"/>
                    </VBox>
                    
                    <VBox styleClass="stat-card" alignment="CENTER" spacing="5" prefWidth="200">
                        <Label fx:id="totalContributorsLabel" text="0" styleClass="stat-number"/>
                        <Label text="ðŸ‘¥ Contributors" styleClass="stat-label"/>
                    </VBox>
                    
                    <VBox styleClass="stat-card" alignment="CENTER" spacing="5" prefWidth="200">
                        <Label fx:id="totalProjectsLabel" text="0" styleClass="stat-number"/>
                        <Label text="ðŸ“ Project Requests" styleClass="stat-label"/>
                    </VBox>
                    
                    <VBox styleClass="stat-card stat-pending" alignment="CENTER" spacing="5" prefWidth="200">
                        <Label fx:id="pendingCountLabel" text="0" styleClass="stat-number"/>
                        <Label text="â³ Pending Review" styleClass="stat-label"/>
                    </VBox>
                </HBox>
                
                <!-- Tabbed Data Tables -->
                <TabPane fx:id="dataTabPane" styleClass="admin-tabs" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    
                    <!-- Tab 1: Contact Inquiries -->
                    <Tab text="ðŸ“§ Contact Inquiries">
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <Label text="Contact Form Submissions" styleClass="section-title"/>
                            <Label text="Messages from customers via the Contact page" style="-fx-text-fill: #94A3B8; -fx-font-size: 13px;"/>
                            
                            <TableView fx:id="contactTable" styleClass="admin-table" prefHeight="450">
                                <columns>
                                    <TableColumn fx:id="contactIdCol" text="ID" prefWidth="50"/>
                                    <TableColumn fx:id="contactNameCol" text="Name" prefWidth="130"/>
                                    <TableColumn fx:id="contactEmailCol" text="Email" prefWidth="180"/>
                                    <TableColumn fx:id="contactProjectTypeCol" text="Project Type" prefWidth="120"/>
                                    <TableColumn fx:id="contactBudgetCol" text="Budget" prefWidth="100"/>
                                    <TableColumn fx:id="contactDetailsCol" text="Details" prefWidth="220"/>
                                    <TableColumn fx:id="contactDateCol" text="Submitted" prefWidth="140"/>
                                    <TableColumn fx:id="contactSyncCol" text="Synced" prefWidth="60"/>
                                    <TableColumn fx:id="contactActionsCol" text="Actions" prefWidth="150"/>
                                </columns>
                                <placeholder>
                                    <Label text="No contact inquiries yet. Submissions will appear here." style="-fx-text-fill: #64748B;"/>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </Tab>
                    
                    <!-- Tab 2: Contributor Applications -->
                    <Tab text="ðŸ‘¥ Contributor Applications">
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <Label text="Team Application Requests" styleClass="section-title"/>
                            <Label text="People who want to join TechHive Studio as contributors" style="-fx-text-fill: #94A3B8; -fx-font-size: 13px;"/>
                            
                            <TableView fx:id="contributorTable" styleClass="admin-table" prefHeight="450">
                                <columns>
                                    <TableColumn fx:id="contribIdCol" text="ID" prefWidth="50"/>
                                    <TableColumn fx:id="contribNameCol" text="Name" prefWidth="140"/>
                                    <TableColumn fx:id="contribEmailCol" text="Email" prefWidth="200"/>
                                    <TableColumn fx:id="contribExpertiseCol" text="Expertise" prefWidth="150"/>
                                    <TableColumn fx:id="contribPortfolioCol" text="Portfolio URL" prefWidth="200"/>
                                    <TableColumn fx:id="contribStatusCol" text="Status" prefWidth="100"/>
                                    <TableColumn fx:id="contribDateCol" text="Applied" prefWidth="140"/>
                                    <TableColumn fx:id="contribActionsCol" text="Actions" prefWidth="150"/>
                                </columns>
                                <placeholder>
                                    <Label text="No contributor applications yet. Applications will appear here." style="-fx-text-fill: #64748B;"/>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </Tab>
                    
                    <!-- Tab 3: Project Requests -->
                    <Tab text="ðŸ“ Project Requests">
                        <VBox spacing="15" style="-fx-padding: 20;">
                            <Label text="Start a Project Requests" styleClass="section-title"/>
                            <Label text="Project requests via 'Start a Project' button (sample data)" style="-fx-text-fill: #94A3B8; -fx-font-size: 13px;"/>
                            
                            <TableView fx:id="projectTable" styleClass="admin-table" prefHeight="450">
                                <columns>
                                    <TableColumn fx:id="projectIdCol" text="ID" prefWidth="50"/>
                                    <TableColumn fx:id="projectNameCol" text="Customer" prefWidth="150"/>
                                    <TableColumn fx:id="projectEmailCol" text="Email" prefWidth="200"/>
                                    <TableColumn fx:id="projectDescCol" text="Project Description" prefWidth="300"/>
                                    <TableColumn fx:id="projectServiceCol" text="Service Type" prefWidth="130"/>
                                    <TableColumn fx:id="projectStatusCol" text="Status" prefWidth="100"/>
                                    <TableColumn fx:id="projectActionsCol" text="Actions" prefWidth="170"/>
                                </columns>
                                <placeholder>
                                    <Label text="No project requests found." style="-fx-text-fill: #64748B;"/>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </Tab>
                    
                </TabPane>
                
            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
