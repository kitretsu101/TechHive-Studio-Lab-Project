<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21"
            fx:controller="com.techhive.controller.ServicesController"
            fitToWidth="true"
            styleClass="main-scroll-pane"
            stylesheets="@../css/styles.css"
            hbarPolicy="NEVER">

    <VBox styleClass="main-container" spacing="0">
        
        <!-- Navbar -->
        <HBox fx:id="navBar" styleClass="nav-bar" alignment="CENTER">
            <padding><Insets top="15" right="50" bottom="15" left="50"/></padding>
            <Label fx:id="logoLabel" text="TechHive Studio" styleClass="logo"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox fx:id="navLinks" spacing="35" alignment="CENTER"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="startProjectBtn" text="Start a Project" styleClass="btn, btn-primary"/>
        </HBox>

        <!-- Header -->
        <VBox styleClass="page-header" alignment="CENTER" spacing="15">
            <padding><Insets top="60" right="50" bottom="40" left="50"/></padding>
            <Label text="Our Expertise" styleClass="page-title"/>
            <Label text="Delivering Technical Excellence Across Domains" styleClass="page-subtitle" textAlignment="CENTER"/>
        </VBox>

        <!-- Services List -->
        <VBox fx:id="servicesContainer" alignment="CENTER" spacing="30" maxWidth="1000">
            <padding><Insets top="20" right="50" bottom="80" left="50"/></padding>
            <!-- Populated by Controller -->
        </VBox>

        <!-- Footer -->
        <HBox styleClass="footer" alignment="CENTER">
            <padding><Insets top="30" right="50" bottom="30" left="50"/></padding>
            <Label text="Â© 2024 TechHive Studio. All rights reserved." styleClass="footer-text"/>
        </HBox>

    </VBox>
</ScrollPane>
