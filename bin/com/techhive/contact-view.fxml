<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" styleClass="content-area" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.techhive.ContactController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label styleClass="header-label" text="Contact Us" />
      <Label text="Name:" textFill="WHITE" />
      <TextField fx:id="nameField" promptText="Your Name" />
      <Label text="Email:" textFill="WHITE" />
      <TextField fx:id="emailField" promptText="Your Email" />
      <Label text="Service:" textFill="WHITE" />
      <ComboBox fx:id="serviceBox" promptText="Select Service">
          <items>
              <FXCollections fx:factory="observableArrayList">
                  <String fx:value="UI/UX Design" />
                  <String fx:value="Full-Stack Development" />
                  <String fx:value="Support/Consulting" />
                  <String fx:value="Other" />
              </FXCollections>
          </items>
      </ComboBox>
      <Label text="Message:" textFill="WHITE" />
      <TextArea fx:id="messageArea" prefRowCount="5" promptText="Project Details..." />
      <Button mnemonicParsing="false" onAction="#handleSubmit" styleClass="primary-button" text="Submit Inquiry" />
      <Label fx:id="statusLabel" />
   </children>
</VBox>
